<?xml version="1.0" encoding="utf-8"?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   assembly="NHibernate.Test"
                   namespace="NHibernate.Test.NHSpecificTest.NH2515.UniDirectional">

  <class name="Child">
    <id name="Id" generator="guid" />
    <property name="Name" />
  </class>

  <class name="Parent">
    <id name="Id" generator="guid" />
    <bag name="Children" inverse="false" cascade="all-delete-orphan">
      <key column="ParentId" not-null="true" on-delete="cascade"/>
      <one-to-many class="Child" />
    </bag>
  </class>
</hibernate-mapping>